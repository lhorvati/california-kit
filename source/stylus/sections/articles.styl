/* ARTICLES.STYL ======================================= */

#content.articles
    .container-jumbo
        padding: 0
    .section-row.glass
        margin: 0


    /* Selector */
    .selector
        color: colorGray5
        font-family: font3
        flexbox()
        flex-flow: column nowrap
        align-items: center
        margin-top: 40px

        .selector__text
            font-size: 16px
            font-weight: 400


        .selector__nav
            width: 280px
            font-weight: 500
            margin-top: 30px

            ul
                flexbox()
                flex-flow: row nowrap
                justify-content: space-between

                a
                    font-size: 16px
                    &:hover
                        color: colorRed


    .article-list
        flexbox()
        flex-flow: row wrap
        align-items: flex-start
        margin-top: 50px

        &.category-list
            justify-content: space-between

        /* Article item */
        .article-item
            position: relative
            width: 200px
            min-height: 400px
            flexbox()
            flex-flow: column nowrap
            align-items: center
            margin-right: 53px
            margin-bottom: 40px
            font-family: font3
            color: colorGray4

            /* Overlay on hover */
            &:hover .article-item__overlay
                opacity: 1

            /* Gap between items */
            &:nth-child(4n)
                margin-right: 0

            .article-item__overlay
                opacity: 0
                position: absolute
                top: 0
                left: 0
                background: colorRed09
                flexbox()
                flex-center()
                flex-flow: column nowrap
                z-index: 1
                transition(.5s)

                p
                    font-family: font2
                    font-weight: 500
                    font-size: 16px
                    color: colorWhite



            .article-item__img,
            .article-item__overlay
                width: 200px
                height: 300px

                img
                    width: 200px
                    height: 300px
                    object-fit: cover


            .article-item__title
                font-size: 18px
                font-weight: 900
                margin-top: 14px
                text-align: center

            .article-item__desc
                font-size: 16px
                font-weight: 500


            .redline
                margin: 14px 0


        /* Category item */
        .article-item.category-item
            width: 300px
            margin-right: 0
            margin-bottom: 80px
            min-height: auto

            .article-item__img,
            .article-item__img img,
            .article-item__overlay
                width: 300px
                height: 200px

            .article-item__img img
                object-fit: cover