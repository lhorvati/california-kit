/* ARTICLES-INFO.STYL ======================================= */

#content.articles-info

    .container
        flexbox()
        flex-flow: row nowrap
        justify-content: flex-start

    /* Gallery */
    .article-gallery
        flexbox()
        flex-flow: column nowrap
        width: 400px
        position: relative

        .article-gallery__main
            width: 100%
            margin-bottom: 30px

        .article-gallery__list
            flexbox()
            flex-flow: row wrap
            justify-content: flex-start
            align-items: flex-start
            height: 150px

            a
                width: 24%
                margin-right: 1%

                &:nth-child(n + 4)
                    margin-right: 0

            img
                width: 100%
                height: 150px
                object-fit: contain
                margin: 0 auto

    /* Specs */
    .article-specs
        flex: 1
        margin-left: 50px

        .specs-wrap
            flexbox()
            flex-flow: column nowrap
            margin-top: 60px

            /* Specs block */
            .specs
                margin-bottom: 60px

                .specs__table
                    line-height: 2.5
                    margin-top: 15px

                .specs__row
                    flexbox()
                    flex-flow: row nowrap
                    justify-content: space-between
                    border-bottom: 1px solid colorGray4-01

                .specs__name,
                .specs__desc
                    font-family: font2
                    color: colorGray4

                .specs__name
                    font-size: 16px
                    font-weight: 500
                    box-sizing()
                    padding-right: 60px

                .specs__desc
                    font-weight: 300
                    font-size: 16px
                    flex: 1
                    text-align: right

